#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    int s,v,p;
	    int maxprofit=0;
	    for(int i=0;i<n;i++)
	    {
	        cin>>s>>p>>v;
	        maxprofit=max(maxprofit,(p/(s+1))*v);
	    }
	    cout<<maxprofit;
	    cout<<"\n";
	}
	return 0;
}
