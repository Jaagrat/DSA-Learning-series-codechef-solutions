#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	long t;
	cin>>t;
	while(t--)
	{
	    long g;
	    cin>>g;
	    while(g--)
	    {
	        long i,n,q;
	        cin>>i>>n>>q;
	        long heads,tails;
	        if(i==1)
	        {
	            heads=n/2;
	            tails=n-heads;
	        }
	        if(i==2)
	        {
	            tails=n/2;
	            heads=n-tails;
	        }
	        if(q==1) cout<<heads;
	        else cout<<tails;
	        
	        cout<<"\n";
	    }
	}
	return 0;
}
